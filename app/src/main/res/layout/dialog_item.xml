<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/containerItem"
    android:background="#00000000"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        app:cardCornerRadius="@dimen/_15sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:background="@color/white"
            android:padding="10dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:layout_marginBottom="10dp"
                android:id="@+id/btnLihat"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:text="LIHAT"
                android:textColor="#ffffff"
                android:background="@drawable/btn_signout_bg3"/>

            <Button
                android:layout_marginBottom="10dp"
                android:id="@+id/btnUbah"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:text="UBAH"
                android:textColor="#ffffff"
                android:background="@drawable/btn_signout_bg1"/>

            <Button
                android:id="@+id/btnHapus"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:text="HAPUS"
                android:textColor="#ffffff"
                android:layout_marginBottom="10dp"
                android:background="@drawable/btn_signout_bg"/>

            <Button
                android:id="@+id/btnBatal"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:text="BATAL"
                android:textColor="#ffffff"
                android:background="@drawable/btn_signout_bg2"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>