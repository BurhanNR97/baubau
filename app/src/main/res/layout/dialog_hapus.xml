<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layoutDialogContainerHapus"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    android:padding="20dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutDialogHapus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_background"
        app:layout_constraintTop_toTopOf="parent"
        >

        <TextView
            android:textAlignment="center"
            android:id="@+id/textTitleHapus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/title_gray"
            android:padding="10dp"
            android:text="KONFIRMASI"
            android:textColor="#000000"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            />

        <TextView
            android:id="@+id/txtTanyaHapus"
            android:paddingLeft="50dp"
            android:paddingRight="50dp"
            android:paddingBottom="50dp"
            android:paddingTop="30dp"
            android:text="Ingin menghapus data ?"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="@dimen/_14ssp"
            android:textColor="#000"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="5dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textTitleHapus"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:padding="@dimen/_14sdp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/layoutDialogHapus"
        app:layout_constraintTop_toBottomOf="@id/layoutDialogHapus">

        <Button
            android:layout_marginRight="@dimen/_14sdp"
            android:id="@+id/btnYaHapus"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:background="@drawable/btn_signout_bg"
            android:textColor="#ffffffff"
            android:text="Ya"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btnTidakHapus"
            app:layout_constraintStart_toStartOf="parent"/>

        <Button
            android:id="@+id/btnTidakHapus"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:background="@drawable/btn_signout_bg1"
            android:textColor="#ffffffff"
            android:text="Tidak"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/btnYaHapus"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>